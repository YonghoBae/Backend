<!--우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>관리자정보확인</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/main">Home</a>
            </li>
            <li>
                <a>관리자정보확인</a>
            </li>
            <li class="active">
                <strong>조회</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">

    <form id="modifyForm" action="/admin/modify" method="post">
        <input type="hidden" name="admin_member_id" value="<%=admin.admin_member_id%>" />
        <div class="ibox-content m-b-sm border-bottom">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">성명</label>
                        <input type="text" class="form-control" name="admin_name" value="<%=admin.admin_name%>" />
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">관리자아이디</label>
                        <input type="text" class="form-control" name="admin_id" value="<%=admin.admin_id%>" readonly />
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">관리자암호</label>
                        <input type="password" class="form-control" name="admin_password"
                            value="<%=admin.admin_password%>" readonly />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">간략소개</label>
                        <textarea class="form-control" rows="10" cols="5" name="summary"><%=admin.summary%></textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">소속회사</label>
                        <select id="company_code" name="company_code" class="form-control">
                            <option value="9" <% if(admin.company_code=="9" ) {%>selected<%}%>>선택</option>
                            <option value="1" <% if(admin.company_code=="1" ) {%>selected<%}%>>자회사</option>
                            <option value="0" <% if(admin.company_code=="0" ) {%>selected<%}%>>협력사</option>
                        </select>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">부서명</label>
                        <input type="text" class="form-control" name="dept_name" value="<%=admin.dept_name%>" />
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">메일주소</label>
                        <input type="text" class="form-control" name="email" value="<%=admin.email%>" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">전화번호</label>
                        <input type="text" class="form-control" name="telephone" value="<%=admin.telephone%>">
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">사용여부</label>
                        <select id="used_yn_code" name="used_yn_code" class="form-control">
                            <option value="9" <% if(admin.used_yn_code=="9" ) {%>selected<%}%>>선택</option>
                            <option value="1" <% if(admin.used_yn_code=="1" ) {%>selected<%}%>>사용함</option>
                            <option value="0" <% if(admin.used_yn_code=="0" ) {%>selected<%}%>>미사용</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">수정</button>
                <button type="button" class="btn btn-danger" id="btnDelete">삭제</button>
                <a href="/admin/list" class="btn btn-info">목록</a>
            </div>
        </div>
    </form>
</div>


<script>
    $("#btnDelete").click(function () {
        if (confirm("정말로 삭제하시겠습니까?")) {
            location.href = "/admin/delete?id=<%=admin.admin_member_id%>";
        }
    })
</script>